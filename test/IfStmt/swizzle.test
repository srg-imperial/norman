-- A conditional statement with an empty then statment, but a non-empty else statement should be converted to one with
-- an existing then statement and no else statement (and an inverted condition).

void foo() { }

int main() {
  int x = 0;
  if (x) {
  } else {
    foo();
  }
}
---
void foo() { }

int main() {
  int x;
  x = 0;
  int _IfCond_main_1;
  _IfCond_main_1 = (!x);
  if (_IfCond_main_1) {
    foo();
  }
}